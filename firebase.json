{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/colors/*",
        "destination": "/colors/index.html"
      },
      {
        "source": "!**/*.@(html|css|js|png|jpg|jpeg|gif)",
        "destination": "/index.html"
      }

    ]
  }
}
